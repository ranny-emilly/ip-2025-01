programa {
  	inclua biblioteca Matematica
  funcao inicio() {
inteiro n1, n2, n3, potencia, numero

    escreva ("Digite três números\n")
    leia (n1,n2,n3)
    
  
  se (n1 >=0 e n1< 10 e n2 >= 0 e n2 < 10 e n3 >=0 e n3 <10) {
  numero = (n1* 100 + n2 *10 + n3)
   potencia = Matematica.potencia (numero, 2.0)

   escreva ("O resultado da composição é:", numero )
   escreva ("\n O resultado elevado ao quadrado é:", potencia)}
      senao {escreva ("DIGITO INVALIDO")
      }
     
  }
}
